<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cdc1ff"
    tools:context=".MainActivity">
        <TextView
            android:id="@+id/etinput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#f5efff"
            android:textSize="50dp"
            android:text=""
            android:gravity="end|bottom"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvoutput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#f5efff"
            android:textSize="30dp"
            android:text=""
            android:gravity="end|bottom"
            android:textColor="@color/black"
            />


<!--    grids for buttons-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="20dp"
            android:columnCount="4"
            android:rowCount="5">
                <!--        buttons-->

                <Button
                    android:id="@+id/btnadd"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#9ceaef"
                    android:text="+"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnsub"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#f3dfc1"
                    android:text="-"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnmul"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#ffcad4"
                    android:text="*"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btndiv"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#aeb8fe"
                    android:text="/"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumseven"
                    android:layout_height="80dp"

                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="7"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumeight"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="8"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumnine"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="9"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnmod"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#f5efff"
                    android:text="%"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumfour"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="4"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumfive"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="5"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumsix"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="6"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumclr"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:backgroundTint="#ab947e"
                    android:text="C"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumone"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="1"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumtwo"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="2"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumthree"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="3"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnequals"
                    android:layout_height="80dp"
                    android:layout_rowWeight="1"
                    android:layout_rowSpan="2"
                    android:layout_margin="5dp"
                    android:backgroundTint="#fcf300"
                    android:text="="
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btndecimal"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="."
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnnumzero"
                    android:layout_height="80dp"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="0"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/btnpow"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_button"
                    android:text="^"
                    android:textSize="25dp" />

        </GridLayout>

</LinearLayout>